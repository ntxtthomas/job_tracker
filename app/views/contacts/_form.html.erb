<%= form_with(model: contact) do |form| %>
  <% if contact.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(contact.errors.count, "error") %> prohibited this contact from being saved:</h2>

      <ul>
        <% contact.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name, style: "width: 250px; height: 25px;" %>
  </div>

  <div>
    <%= form.label :title, style: "display: block" %>
    <%= form.text_field :title, style: "width: 250px; height: 25px;" %>
  </div>

  <div>
    <%= form.label :email, style: "display: block" %>
    <%= form.text_field :email, style: "width: 250px; height: 25px;" %>
  </div>

  <div>
    <%= form.label :phone, style: "display: block" %>
    <%= form.text_field :phone, style: "width: 250px; height: 25px;" %>
  </div>

  <div>
    <%= form.label :linkedin, "LinkedIn URL", style: "display: block" %>
    <%= form.url_field :linkedin, placeholder: "https://linkedin.com/...", style: "width: 250px; height: 25px;" %>
  </div>

  <div>
    <%= form.label :about, style: "display: block" %>
    <%= form.text_area :about, rows: 4, style: "width: 250px; padding: 8px; border: 1px solid #ddd; border-radius: 4px;" %>
  </div>

  <div>
    <%= form.label :notes, style: "display: block" %>
    <%= form.text_area :notes, rows: 4, style: "width: 250px; padding: 8px; border: 1px solid #ddd; border-radius: 4px;" %>
  </div>

  <div>
    <%= form.label :company_id, "Company", style: "display: block" %>
    <%= form.collection_select :company_id, Company.order(:name), :id, :name, { prompt: "Select a company" }, { style: "display: block; width: 250px; height: 30px;" } %>
  </div>

  <div style="margin-top: 20px;">
    <%= form.submit %>
  </div>
<% end %>
