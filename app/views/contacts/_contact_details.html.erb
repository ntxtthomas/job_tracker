<div id="<%= dom_id contact %>">
  <h2><%= contact.name %></h2>

  <div class="contact-details">
    <% if contact.title.present? %>
    <p>
      <strong>Title:</strong>
      <%= contact.title %>
    </p>
    <% end %>

    <% if contact.email.present? %>
    <p>
      <strong>Email:</strong>
      <%= link_to contact.email, "mailto:#{contact.email}" %>
    </p>
    <% end %>

    <% if contact.phone.present? %>
    <p>
      <strong>Phone:</strong>
      <%= link_to contact.phone, "tel:#{contact.phone}" %>
    </p>
    <% end %>

    <% if contact.linkedin.present? %>
    <p>
      <strong>LinkedIn:</strong>
      <%= link_to contact.linkedin, contact.linkedin, target: "_blank", rel: "noopener noreferrer" %>
    </p>
    <% end %>

    <% if contact.company %>
    <p>
      <strong>Company:</strong>
      <%= link_to contact.company.name, contact.company %>
    </p>
    <% end %>

    <% if contact.about.present? %>
    <p>
      <strong>About:</strong>
    </p>
    <div style="margin-top: 8px; margin-bottom: 15px; padding: 10px; background-color: var(--bg-secondary, #f8f9fa); border-radius: 4px; white-space: pre-line; word-wrap: break-word;">
      <span style="text-align: left !important; display: block !important;">
        <%= contact.about.strip %>
      </span>
    </div>
    <% end %>

    <% if contact.notes.present? %>
    <p>
      <strong>Notes:</strong>
    </p>
    <div style="margin-top: 8px; margin-bottom: 15px; padding: 10px; background-color: var(--bg-secondary, #f8f9fa); border-radius: 4px; white-space: pre-line; word-wrap: break-word;">
      <span style="text-align: left !important; display: block !important;">
        <%= contact.notes.strip %>
      </span>
    </div>
    <% end %>
  </div>
</div>
